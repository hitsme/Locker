<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?attr/colorPrimaryDark"
        android:gravity="bottom"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/files_bg_primary"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_margin="16dp"
            android:visibility="gone"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:theme="@style/Toolbar"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/ic_lock_icon" />

    </LinearLayout>

    <Button
        android:id="@+id/baiduyun_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_baiduyun_logo"
        android:drawablePadding="30dip"
        android:gravity="center_vertical"
        android:paddingLeft="80dp"
        android:text="百度云盘"
        android:textSize="18dp" />

    <Button
        android:id="@+id/weiyun_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="微云"
        android:textSize="18dp"
        android:paddingLeft="80dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_weiyun_bt"
        android:drawablePadding="30dip"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_bt"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/holo_blue_bright"
            android:text="GO"
            android:textSize="18dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/go_bt"
            android:background="@null"
            android:drawableLeft="@drawable/ic_cloud_black_24dp"
            android:drawablePadding="30dip"
            android:gravity="center_vertical"
            android:hint="输入云盘网址www.xxx.com"
            android:paddingLeft="80dp"
            android:textColorHint="#03A9F4"
            android:textSize="18dp" />
    </RelativeLayout>
</LinearLayout>